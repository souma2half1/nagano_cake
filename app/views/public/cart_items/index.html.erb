<div class="container">
<div class="row">
<div class="col-md-12">

<h>ショッピングカート</h>

<div class="ml-auto">
<%= link_to'カートを空にする',cart_items_destroy_all_path,class:"btn btn-sm btn-danger" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  
 <%  @sum = 0 %>
  
  <% @cart_items.each do |cart_item| %>
  
  <tbody>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item) do |f| %> 
          <%= f.select :amount, *[1..5] %>
          <%= f.submit "変更", class:"btn btn-sm btn-success " %>
        <% end %>
      </td>
      <td><%= cart_item.subtotal %></td>
      <% @sum += cart_item.subtotal %>
      <th><%= link_to'削除する', cart_item_path(cart_item.id), method: :delete ,class:"btn btn-sm btn-danger" %> </th>
    </tr>

  </tbody>
  </table>
  
  <% end %>
  
  <%= link_to'買い物を続ける',items_path ,class:"btn btn-sm btn-primary ml-5" %>
  
  
  <div class="col-md-3 ml-auto">
  <table class="table">
    <tbody>
      <tr>
        <td>合計金額</td>
        <td><%= @sum %></td>
      </tr>
    </tbody>
  </table>
  </div>
  
  <%= link_to'情報入力に進む',new_order_path,class:"btn btn-sm btn-success ml-5" %>