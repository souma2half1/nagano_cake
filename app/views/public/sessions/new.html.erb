<div class="container">
<div class="row">
<div class="col-md-12">

<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %><br />
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン",class:"btn btn-sm btn-success mt-3" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

</div>
</div>
</div>