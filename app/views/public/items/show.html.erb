<div class="container">
<div class="row">



<div class="col-md-5">
<%= image_tag @item.image, size: "200x200" %>
</div>


<div class="col-md-7">
<%= @item.name %></br>

<%= @item.introduction %></br>

 ￥<%=  @item.price %>(税込)</br>

<%= form_with model: @cart_item, url: cart_items_path,method: :post do |f| %>

<%= f.select :amount, *[1..5] %>

<%= f.hidden_field :item_id, :value => @item.id %>


<%= f.submit "カートに入れる" ,class:"btn btn-sm btn-success ml-5" %>
<% end %>
</div>

</div>
</div>