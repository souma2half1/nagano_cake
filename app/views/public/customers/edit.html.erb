<div class="container">
<div class="row">
<div class="cd-md-12">

<h3>会員情報編集</h3>

<div>
<%= form_with model:@customer,url: customers_infomation_path,method: :patch do |f| %>
 <table >
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :last_name,class: "mr-3" %><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :last_name_kana, class: "mr-3"%><%=  f.text_field :first_name_kana %></td>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
       <td>電話番号</td>
       <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
       <td>メールアドレス</td>
       <td><%= f.text_field :email %></td>
    </tr>

  </tbody>
  </table>
  
  <%= f.submit '編集内容を保存',class:"btn btn-sm btn-success mt-5 mr-5" %>
  
  <%= link_to'退会する',unsubscribe_path,class:"btn btn-sm btn-danger mt-5 " %>
  
  <% end %>
  
  
  </div>
  </div>
  </div>