<div class="container">
<div class="row">
<div class="col-md-12">

<h3>注文情報入力</h3>

<%= form_with model: @order, url: confilm_path do |f| %>

<h4>支払い方法</h4>
    <%= f.radio_button :payment,:credit_card %>
    <%= f.label :payment,"クレジットカード" %>
    <%= f.radio_button :payment,:transfer %>
    <%= f.label :payment,"銀行振込" %>

<h4>お届け先</h4>

    <%= f.radio_button :select_address, 0%>
    <%= f.label :select_address,"ご自身の住所" %></br>
    <%= current_customer.address %></br>
    <%= current_customer.name %></br>
    
    <%= f.radio_button :select_address,1 %>
    <%= f.label :select_address,"登録済み住所から選択" %></br>
    <%= f.collection_select :address_id, current_customer.addresses, :id, :full_address  %></br>
    
    
    <%= f.radio_button :select_addressr,2 %>
    <%= f.label :select_address,"新しいお届け先" %></br>
    
    
    <%= f.label :postal_code,"郵便番号（ハイフンなし）"  %>
    <%= f.text_field :postal_code %></br>
    
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %></br>
    
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name %></br>
    
    <%= f.submit"確認画面へ進む",class:"btn btn-sm btn-primary  ml-5 mt-5" %>
    
    <% end %>

</div>
</div>
</div>