<div class="container">
<div class="row">
<div class="col-lg-12">

<p>注文履歴一覧</p>

<table class="table">
 <thead>
    <tr>
     <th>注文日</th>
     <th>配送先</th>
     <th>注文商品</th>
     <th>支払金額</th>
     <th>注文詳細</th>
    </tr>
 </thead>
 
 <div class = "row">
  <div class ="col-md-12">
 <% @orders.each do |order| %>
 <tbody>
    <tr>
     <td><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
     <td><%= order.address %></td>
     
     <td>
     <% order.order_details.each do |order_detail| %>
     <%= order_detail.item.name %></br>
     <% end %>
     </td>
     
     <td><%= order.billing %></td>
     <td><%= link_to'表示する',order_path(order.id) %></td>
    </tr>
 </tbody>

<% end %>
</table>
 </div>
 </div>
 
</div>
</div>
</div>