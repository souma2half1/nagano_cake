<h1>商品詳細</h1>


<%= image_tag @item.image, size: "200x200" %>



 <table>
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @genre.name %></td>
    <tr>
      <td>税込価格（税抜価格）</td>
      <td><%= (@item.price*1.1).floor %>  <%= "("+@item.price.to_s+")" %></td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <% if @item.is_active = true %>
      <td>販売中</td>
      <% else %>
      <td>販売停止中</td>
      <% end %>
    </tr>
  </tbody>
  </table>
  
  <%= link_to"編集する",edit_admin_item_path(@item.id) %>