
<div class = "container">
<dic class = "row">
<div class = "col-md-12">
<h><%= @customer.name %>さんの会員情報編集</h>

<%= form_with model:@customer,url: admin_customer_path,method: :patch do |f| %>
 <table>
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :last_name %><%= f.text_field :first_name, class: "mt-3"%></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :last_name_kana %><%=  f.text_field :first_name_kana, class: "mt-3" %></td>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code, class: "mt-3" %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, class: "mt-3"%></td>
    </tr>
    <tr>
       <td>電話番号</td>
       <td><%= f.text_field :telephone_number, class: "mt-3" %></td>
    </tr>
    <tr>
       <td>メールアドレス</td>
       <td><%= f.text_field :email, class: "mt-3" %></td>
    </tr>
    <tr>
       <td>会員ステータス</td>
       <td><%= @customer.is_deleted %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
       <%= f.radio_button :is_deleted, "true", class: "mt-3" %>
       <%= f.label :is_deleted,"有効" %>
       <%= f.radio_button :is_deleted, "false", class: "mt-3" %>
       <%= f.label :is_deleted,"退会" %>
      </td>
    </tr>
  </tbody>
  </table>
  
  <%= f.submit '変更を保存',class:"btn btn-sm btn-success" %>
  
  <% end %>
  
  </div>
  </div>
  </div>