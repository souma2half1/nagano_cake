<div class="container" >
  <div class="row">
    <div class="col-md-12">
      <h>管理者ログイン</h>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" ,class:"mb-3" %>
        </div>
      
        
      
        <%= f.submit "ログイン" ,class:"btn btn-sm btn-success"%>
      
      <% end %>
    
    </div>
  </div>
</div>
<%= render "admin/shared/links" %>
