<div class = "container">
<div class = "row">
<div class = "col-md-12">
  
<h>注文履歴一覧</h>

<table class = "table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
  </thead>
  
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.name %></td>
      <td><%= order.order_details.sum(:quantity) %></td>
    </tr>
    <% end %>
  </tbody>
  </table>
  <%= paginate @orders %>
  
  
  </div>
  </div>
  </div>